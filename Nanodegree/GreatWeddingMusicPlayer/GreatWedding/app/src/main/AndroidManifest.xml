<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rajczyk.michalina.great_wedding">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DinnerMusicActivity"
            android:label="@string/dinner_music_label" />
        <activity
            android:name=".RomanticMusicActivity"
            android:label="@string/romantic_music_label" />
        <activity
            android:name=".HitsActivity"
            android:label="@string/hits_label" />
        <activity
            android:name=".WildPartyActivity"
            android:label="@string/wild_party_music_label" />
        <activity
            android:name=".YourPlaylistActivity"
            android:label="@string/your_playlist_label" />
    </application>

</manifest>